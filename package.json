{
    "name": "streamhub-ratings",
    "description": "A Module to pull and display data from Livefyre's Ratings API",
    "author": "Livefyre <support@livefyre.com>",
    "version": "0.0.0",
    "devDependencies": {
        "bower": "~1.0.0",
        "http-server": "*",
        "requirejs": "*",
        "phantom": "*",
        "less": "~1.3.3",
        "jshint": "~1.1.0",
        "jsdoc": "git://github.com/jsdoc3/jsdoc.git"
    },
    "scripts": {
        "postinstall": "./node_modules/bower/bin/bower install",
        "start": "./node_modules/http-server/bin/http-server .",
        "build": "rm -rf dist/ && mkdir dist/ && npm run-script sass",
        "sass": "mkdir -p dist/styles && sass --update src/styles dist/styles"
    }
}
